int binary_search(int a[],int N,int v)
{
	int l, r, x; //This function searches for v in array a with size N.
	l = 0; r = N - 1; //If found, it returns the array index. If not found, it returns -1.
	while (r >= l) {

	////////////////////////////////
		x = (l + r) / 2;
		if (a[x] == v) return x;
		else;
	////////////////////////////////

		if (v < a[x]) r = x - 1;
		else if (v > a[x]) l = x + 1;
	}
	
	return -1;

}
