#include <stdio.h>
#include <stdlib.h>


int main() {
	int arr[4] = { 1,5,4,2 };
	int n = 4;

	bubbleSort(arr, n);


	return 0;
}
int bubbleSort(int A[], int N)
{
	int temp, i, j;
	for (i = N - 1; i >= 1; i--) {
		for (j = 1; j <= i; j++) {
			// 1 ~ N-1, 1 ~ N-2, 1~ N-3, ... 1 ~ 2
			// j-1번째와j번째를 바꾸는걸로 하면되겠군.
			
			//////////////////////////
			if (A[j - 1] > A[j]) {
				temp = A[j - 1];
				A[j - 1] = A[j];
				A[j] = temp;
			}
			//////////////////////////

		}
	}
	return 1;
}

